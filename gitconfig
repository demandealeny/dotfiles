[push]
  default = current
[color]
  ui = auto
[alias]
  aa = add --all
  ap = add --patch
  ca = commit --amend
  ci = commit -v
  co = checkout
  st = status
  up = !git fetch origin && git rebase origin/master
	s = status -s
	lg = log --oneline --decorate --all --graph
[core]
  excludesfile = ~/.gitignore
	autocrlf = input
[merge]
  ff = only
[include]
  path = .gitconfig.local
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[user]
	name = Lainnie
	email = l.diallo.pro@gmail.com
[pull]
	rebase = true
[rerere]
	enabled = true
